<div id="<%= dom_id tweet %>" class="flex flex-col">
  <div class="flex flex-col p-2 border-2 border-slate-400 rounded-md">
    <div class="mb-3">
      <p class="text-2xl">
        <%= tweet.body %>
      </p>
    </div>

    <div class="flex space-x-2">
      <p>
        likes (<%= tweet.likes %>)
      </p>

      <p>
        retweets (<%= tweet.retweets %>)
      </p>
    </div>
  </div>

  <p class="text-sm text-slate-600">
    <%= link_to "Show this tweet", tweet %>
  </p>
</div>
